{% macro user_settings_pane(class) %}
  <div class="bc-user-settings-pane{{ ' ' + class if class }}">
    <form action="" id="bc-user-settings-form">
      {% call form_field_group() %}
        {{ form_label(label="Tax Rate", class="bc-form-label--on-dark", for="bc-user-settings-tax-rate") }}
        {{ form_input(step="0.01", type="number", suffix="%")}}
      {% endcall %}
    </form>
  </div>
{% endmacro %}
